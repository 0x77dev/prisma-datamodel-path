{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSourceMap": true,
    "lib": [
      "ESNext"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "build",
    "rootDir": "..",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  }
}